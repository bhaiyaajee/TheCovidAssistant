void add(FILE * fp); //to add patient list
FILE * del(FILE * fp);//to delete patient list
void checkup(FILE * fp);//for daily check up
void display(FILE * fp);//display whole list
void searchRecord(FILE *fp);//find a particular record
void printChar(char ch,int n);//printing a character ch n times
void printHead();//printing head line for each screen
void suggestion(FILE * fp);
struct Stud
{
    char name[100];
    char disease[100];
    char condition[50];
    long long int adno;
    float temp;
    int pulserate;
    int oxygenlevel;
};

void HomeIsolationAssist()
{
     printf(" \n\n");

    printf("            || WELCOME  TO  THE  HOME  ISOLATION   PORTAL || : \n");
    printf("               -----------------------------------------------      \n\n\n\n\n");

 FILE * fp;
 Student s;
int option;
char another;

if((fp=fopen("patientInfo55.csv","rb+"))==NULL)
{
    if((fp=fopen("patientInfo55.csv","wb+"))==NULL)
       {
           printf("can't open file");
           return 0;
           }
}
printHead();
printf("\n\n\t\tONE THING KEEP IN MIND IS - DO NOT PANIC\n");
printf("\n\t\tPLEASE PRESS ANY KEY TO CONTINUE");

while(1)
{
    printHead();
    printf("\n\t");
    printChar('-',64);
    int choice;
    printf("\n\n\t 1. PATIENT  \t\t\t\t 2. DOCTOR \n");
    printf("\n PLEASE ENTER YOUR CHOICE :- ");
    scanf("%d",&choice);
    if(choice==1)
    {
printf("\n\n\t\t\t1. PLEASE PROVIDE YOUR HEALTH DETAIL");
    printf("\n\n\t\t\t2. DAILY HEALTH CHECK UP");
    printf("\n\n\t\t\t3 . SUGGESTION");
        printf("\n\n\t\t\t0. EXIT");
printf("\n\n\t\tEnter Your Option :--> ");
    scanf("%d",&option);
    }
    else{
        printf("\n\n\t\t\t4. DELETE PATIENT RECORD");
printf("\n\n\t\t\t5. DISPLAY PATIENT LIST");
    printf("\n\n\t\t\t6. SEARCH PARTICULAR PATIENT RECORD");
    printf("\n\n\t\t\t0. EXIT");
printf("\n\n\t\tEnter Your Option :--> ");
    scanf("%d",&option);

    }
switch(option)
    {
        case 0: return 1;
                break;
        case 1: add(fp);
                break;
        case 2: checkup(fp);
                break;
        case 3: suggestion(fp);
                break;
        case 5: display(fp);
                break;
          case 4: fp=del(fp);
                break;
        case 6: searchRecord(fp);
                break;
default: printf("\n\t\tYou Pressed wrong key");
                  printf("\n\t\tProgram terminated");
                  exit(0);
}
}
}
//----printing character ch at n times ------
void printChar(char ch,int n)
{
    while(n--)
    {
        putchar(ch);
    }
}

//-----Printing Head Line of the program -----

void printHead()
{ system("cls");

printf("\n\n\t");
printChar('=',16);
printf("[HOME ISOLATION]");
printChar('=',16);
printf("\n");
}
// ==========ADDING PATIENT RECORD==========================
void add(FILE * fp)
{
printHead();
char another='y';
Student s;
int i;
fseek(fp,0,SEEK_END);
while(another=='y'||another=='Y')
{
A:
    printf("\n\t\t\tPLEASE ENTER YOUR DETAIL\n");
printf("\n\n\t\tEnter Your valid Aadhaar number: ");
while(1)
{
    long long int temp;
    int count=0;
scanf("%lld",&s.adno);
temp=s.adno;
while(temp!=0)
{
    temp=temp/10;
    count++;
}
if(count!=12)
{
    printf("\n\t\tYou entered wrong Aadhaar no");
    goto A;
}
else
{
   break;
}
}
   printf("\n\n\t\tEnter your full name :");
    fflush(stdin);
    fgets(s.name,100,stdin); //fgets takes an extra \n character as input
    s.name[strlen(s.name)-1]='\0';
    printf("\n\n\t\tIF YOU HAVE ANY OF THE FOLLOWING DISEASE PLZ WRITE HERE EXAMPLE (*ASTHMA \n *CANCER.\n  *DIABETES\t\n  *BLOOD PRESSURE OR *NONE)  \n \n PLEASE WRITE HERE  : ");

fflush(stdin);
fgets(s.disease,50,stdin);
    s.disease[strlen(s.disease)-1]='\0';
printf("\n\nEnter Your Body temp in Fahrenheit : ");
scanf("%f",&s.temp);
//fwrite(&s,sizeof(s),1,fp);
printf("\n\nEnter Your  pulse rate in BPM : ");
scanf("%d",&s.pulserate);
printf("\n\nEnter oxygen level : ");
scanf("%d",&s.oxygenlevel);
fwrite(&s,sizeof(s),1,fp);
    //fflush(stdin);
printf("\n\n\t\tWant to enter another patient info (Y/N) : ");
fflush(stdin);
    another=getchar();
}
}
//===================DELETING A PATIENT RECORD ============
FILE * del(FILE * fp)
{
 printHead();

Student s;
long long int flag=0,tempRoll,siz=sizeof(s);
FILE *ft;

if((ft=fopen("temp.txt","wb+"))==NULL)
{
    printf("\n\n\t\t\t\\t!!! ERROR !!!\n\t\t");
    system("pause");
     return fp;
}
printf("\n\n\tEnter Aadhaar no of Of patient whom you want to delete");
printf("\n\n\t\t\tAadhaar  No. : ");
scanf("%lld",&tempRoll);
rewind(fp);
while((fread(&s,siz,1,fp))==1)
{
    if(s.adno==tempRoll)
    { flag=1;
    printf("\n\tRecord Deleted for");
    printf("\n\n\t\t%s\n\n\t\t%s\n\n\t\t%d\n\t",s.name,s.disease,s.adno);
    continue;
    }

    fwrite(&s,siz,1,ft);
}
fclose(fp);
fclose(ft);
remove("patientInfo55.csv");
rename("temp.txt","patientInfo55.csv");
if((fp=fopen("patientInfo55.csv","rb+"))==NULL)
{
    printf("ERROR");
    return  NULL;
}
if(flag==0) printf("\n\n\t\t!!!! ERROR RECORD NOT FOUND \n\t");
printChar('-',65);
printf("\n\t");
system("pause");
return fp;
}
//===========DAILY CHECK UP ===========================
void checkup(FILE * fp)
{
printHead();
Student s;
long long int i,flag=0,tempRoll,siz=sizeof(s);
printf("\n\n\t\tREMEMBER HOME ISOLATION IS PHYSICAL DISTANCING NOT EMOTIONAL DISTANCING");
printf("\n\n WARNING :- PLEASE DO A HEALTH CHECKUP TWICE IN A DAY BECAUSE, WE KEEP YOUR LATEST TEMPERATURE AND PULSE RATE ");
printf("\n\n\tEnter your registered  Aadhaar Number  : ");
scanf("%lld",&tempRoll);
rewind(fp);
while((fread(&s,siz,1,fp))==1)
{
    if(s.adno==tempRoll)
        {flag=1;
        break;
        }
}
if(flag==1)
    {
    fseek(fp,-siz,SEEK_CUR);
    printf("\n\n\t\tRECORD FOUND");
   printf("\n\n\tEnter Body Temp in fahrenheit : ");
scanf("%f",&s.temp);
//fwrite(&s,sizeof(s),1,fp);
printf("\n\n\tEnter pulse rate  in BPM :");
scanf("%d",&s.pulserate);
printf("\n\n\tEnter oxygen level:");
scanf("%d",&s.oxygenlevel);
fwrite(&s,sizeof(s),1,fp);
}
else printf("\n\n\t!!!! ERROR !!!! RECORD NOT FOUND");
printf("\n\n\t");
system("pause");

}
//====================DISPLAY THE PATIENT LIST =================
void display(FILE * fp)
{   printHead();
    Student s;
    int i,siz=sizeof(s);
  rewind(fp);
while((fread(&s,siz,1,fp))==1)
    {
        printf("\n\t\tPATIENT DETAILS ARE :-");
printf("\n\n\t\tAADHAAR NO : %lld",s.adno);
                printf("\n\t\tNAME : %s",s.name);
                        printf("\n\t\tDISEASE : %s",s.disease);
printf("\n\tBody Temperature: ");
printf("| %.2f |",s.temp);
        printChar('-',65);
        printf("\n\tPulse Rate: ");
printf("| %d |",s.pulserate);
        printChar('-',65);
        printf("\n\toxygenlevel: ");
printf("| %d |",s.oxygenlevel);
        printChar('-',65);
    }
    printf("\n\n\n\t");
     printChar('*',65);
    printf("\n\n\t");
    system("pause");

}
//GIVING SUGGESTION TO PATIENT
void suggestion(FILE *fp)
{printHead();
long long int tempRoll,flag,siz,i;
Student s;
char another='y';
siz=sizeof(s);
while(another=='y'||another=='Y')
{
printf("\n\n\tEnter Aadhaar  Number:- ");
scanf("%lld",&tempRoll);
rewind(fp);
while((fread(&s,siz,1,fp))==1)
{
    if(s.adno==tempRoll)
        {flag=1;
        break;
        }
}
if(flag==1)
    {

    if((s.temp >=100)&&(s.pulserate>=100))
    {
        printf("\n\t\t\tPLEASE BE REMAIN AT HIGH ALERT.\n");
    printf("1. A care giver  must be be available to provide care on 24 x7 basis\n");
     printf(" 2. Please inform your caregiver to maintain communication link between with doctor\n");
      printf(" 3. please follow all the instruction prescribed by the treating medical officer\n");
      printf("4. please discuss your health status to the District Surveillance Officer or Distric surveillance teams\n");

}
if((s.temp >=100)&&(s.pulserate<=100))
    {
        printf("\n\t\t\tPLEASE BE REMAIN AT ALERT.");
        printf("1. A care giver  must be be available to provide care on 24 x7 basis\n");
printf(" 2. Please inform your caregiver to maintain communication link between with doctor\n");
      printf(" 3. please follow all the instruction prescribed by the treating medical officer.");
}
if((s.temp <=100)&&(s.pulserate>=100))
    {
        printf("\n\t\tPLEASE BE REMAIN AT ALERT.");
            printf("1. A care giver  must be be available to provide care on 24 x7 basis\n");
      printf(" 3. please follow all the instruction prescribed by the treating medical officer\n");

}
if((s.temp <=100)&&(s.pulserate<=100))
    {
    printf("\nTHERE IS NO NEED TO WORRY.");
}


}
else printf("\n\n\t\t!!!! ERROR RECORD NOT FOUND !!!!");
printf("\n\n\t\tWant to know other suggestion (Y/N)");
fflush(stdin);
another=getchar();
}
}
// TO SEARCH SPECIFIC PATIENT RECORD
void searchRecord(FILE *fp)
{printHead();
long long int tempRoll,flag,siz,i;
Student s;
char another='y';
siz=sizeof(s);
while(another=='y'||another=='Y')
{
printf("\n\n\tEnter Aadhaar  Number of patient to search the record : ");
scanf("%lld",&tempRoll);
rewind(fp);
while((fread(&s,siz,1,fp))==1)
{
    if(s.adno==tempRoll)
        {flag=1;
        break;
        }
}
if(flag==1)
    {
    printf("\n\t\tNAME : %s",s.name);
        printf("\n\n\t\tDIESESE: %s",s.disease);
        printf("\n\n\t\tAADHAAR NO : %lld",s.adno);
        printf("\n\n\tTEMP: ");
printf("| %.2f |",s.temp);
        printChar('-',65);
        printf("\n\n\tPULSE RATE: ");
printf("| %d |",s.pulserate);
        printChar('-',65);
        printf("\n\n\toxygenlevel: ");
printf("| %d |",s.oxygenlevel);
        printChar('-',65);
}
else printf("\n\n\t\t!!!! ERROR RECORD NOT FOUND !!!!");
printf("\n\n\t\tWant to enter another search (Y/N)");
fflush(stdin);
another=getchar();
}
